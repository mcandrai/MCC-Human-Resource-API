@{
    ViewData["Title"] = "Pokemon Page";
    Layout = "_Layout";
}


<div class="row">
    <div class="col">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody class="pokeTable">
            </tbody>
        </table>

        <div class="modal fade" id="pokeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-light">

                    </div>
                    <div class="modal-body bg-white">
                        <div class="container">
                            <div class="photo">

                            </div>
                            <div class="description mt-3">
                                <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">About</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">Statistics</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Sprites</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="pills-tabContent">
                                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                                        <table class="table table-borderless">
                                            <tbody class="table-about">
                                                <tr>
                                                    <td class="text-muted">Type</td>
                                                    <td class="type text-capitalize"></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">Height</td>
                                                    <td class="height text-capitalize"></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">Weight</td>
                                                    <td class="weight text-capitalize"></td>
                                                </tr>
                                                <tr>
                                                    <td class="text-muted">Abilities</td>
                                                    <td class="abilities text-capitalize"></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                                        <div class="stats">

                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                                        <div class="sprites">
                                            <div class="row">
                                                <div class="col-md-6 sprites-front text-center">

                                                </div>
                                                <div class="col-md-6 sprites-back text-center">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" src="~/js/pokemon.js"></script>
}